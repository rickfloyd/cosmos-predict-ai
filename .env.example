# Environment Variables Configuration
# Copy this file to .env and add your actual API keys

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Video Generation API Keys (Optional - for advanced features)
GOOGLE_CLOUD_API_KEY=your_google_veo_api_key_here
VADOO_API_KEY=your_vadoo_api_key_here
PREDIS_API_KEY=your_predis_api_key_here

# Production Settings
NODE_ENV=production
PORT=3000

# DigitalOcean Deployment Settings
DOMAIN_NAME=your-domain.com
SSL_ENABLED=true